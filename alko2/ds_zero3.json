{
  "train_micro_batch_size_per_gpu": 1,
  "gradient_accumulation_steps": 128,
  "gradient_clipping": 1.0,
  "bf16": {
    "enabled": true
  },
  "zero_optimization": {
    "stage": 3,
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "overlap_comm": true,
    "contiguous_gradients": true,
    "reduce_bucket_size": 26214400,
    "stage3_prefetch_bucket_size": 26214400,
    "stage3_param_persistence_threshold": 10000
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0003,
      "betas": [
        0.9,
        0.95
      ],
      "eps": 1e-08,
      "weight_decay": 0.1
    }
  },
  "scheduler": {
    "type": "CosineAnnealing",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 0.0003,
      "warmup_num_steps": 1000
    }
  }
}